<p id="notice"><%= notice %></p>

<div class="card">
<div class="card-body">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead"><%= @friend.email %>  |  <%= @friend.phone %></p>
  <hr class="my-4">
  <p><%= @friend.address %></p>
  </div>
  <div class="card-footer text-muted">
